@model HomeEditViewModel
@{
    ViewData["Title"] = "Edit Student";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-info text-white text-center rounded-top">
                    <h3 class="card-title mb-0">Edit Student</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Home" asp-action="Edit" method="post" class="p-4">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">Student Name</label>
                            <input asp-for="Name" class="form-control rounded-pill p-3" placeholder="Enter student name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Age" class="form-label">Age</label>
                            <input asp-for="Age" class="form-control rounded-pill p-3" placeholder="Enter student age" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Kurs" class="form-label">Kurs</label>
                            <input asp-for="Kurs" class="form-control rounded-pill p-3" placeholder="Enter kurs" />
                            <span asp-validation-for="Kurs" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg rounded-pill shadow-sm">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
