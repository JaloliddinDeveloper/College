@{
    ViewData["Title"] = "Create Student";
}
@model Student

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-primary text-white text-center rounded-top">
                    <h3 class="card-title mb-0">Create Student</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Home" asp-action="Create" method="post" class="p-4">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control rounded-pill p-3" placeholder="Enter student name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Age" class="form-label"></label>
                            <input asp-for="Age" class="form-control rounded-pill p-3" placeholder="Enter student age" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cource"></label>
                            <select asp-for="Cource" class="form-control">
                                <option value="">Select Cource</option>
                                @foreach (var cource in Enum.GetValues(typeof(Cource)))
                                {
                                    <option value="@cource">@cource</option>
                                }
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Balance" class="form-label"></label>
                            <input asp-for="Balance" class="form-control rounded-pill p-3" placeholder="Enter Balance" />
                            <span asp-validation-for="Balance" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreateDate" class="control-label"></label>
                            <input asp-for="CreateDate" class="form-control" type="date" />
                            <span asp-validation-for="CreateDate" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Gender" class="form-label">Gender</label><br />

                            <input type="radio" asp-for="Gender" value="Male" id="Male" />
                            <label for="Male">Male</label>

                            <input type="radio" asp-for="Gender" value="Female" id="Female" class="ms-3" />
                            <label for="Female">Female</label>

                            <input type="radio" asp-for="Gender" value="Other" id="Other" class="ms-3" />
                            <label for="Other">Other</label>

                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-4">
                            <input asp-for="IsMarried" class="form-check-input" type="checkbox" id="IsMarried" />
                            <label asp-for="IsMarried" class="form-check-label">Married</label>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">Create Student</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
